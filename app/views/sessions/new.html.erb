<h1>Log in</h1>

<%= form_with(scope: :session, local: true, url: login_path, class: 'article-form') do |f| %>

    <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, placeholder: "Enter your email address", class: 'form-input' %>
    </div>

    <div class="form-group">
        <%= f.label :password %><br/>
        <%= f.password_field :password, placeholder: "Enter your password", class: 'form-input' %>
    </div>

    <div class="form-group">
        <%= f.submit 'Log in', class: 'btn submit-btn' %>
    </div>
<% end %>

<%= link_to 'Return to articles listing', articles_path, class: 'btn back-btn' %>
