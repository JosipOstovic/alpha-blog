<%= render 'shared/errors', obj: @user %>

<%= form_with(model: @user, local: true, class: 'article-form') do |f| %>
    <div class="form-group">
        <%= f.label :username %><br/>
        <%= f.text_field :username, placeholder: "Enter a username", class: 'form-input' %>
    </div>

    <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, placeholder: "Enter your email address", class: 'form-input' %>
    </div>

    <div class="form-group">
        <%= f.label :password %><br/>
        <%= f.password_field :password, placeholder: "Choose a password", class: 'form-input' %>
    </div>

    <div class="form-group">
        <%= f.submit(@user.new_record? ? 'Sign up' : "Update account", class: 'btn submit-btn') %>
        <%= link_to "Delete profile", user_path(current_user), class: 'btn delete-btn', data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete your account?" } %>
    </div>
<% end %>

<%= link_to 'Return to articles listing', articles_path, class: 'btn back-btn' %>
